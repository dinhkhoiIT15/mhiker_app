<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- THAY ĐỔI: Cập nhật theme tối (Dark) với tông Xanh đậm -->
    <style name="Theme.MHiker_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Chữ đen trên nền xanh nhạt -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_accent</item>
        <item name="colorSecondaryVariant">@color/blue_dark_accent</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Chữ đen trên nền xanh nhạt -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item> <!-- Nền tối -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorError">@color/red_error_dark</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item> <!-- Màu nền tối của CardView, Dialog,... -->
        <item name="colorOnSurface">@color/text_primary_dark</item> <!-- Màu chữ trên Surface tối -->
    </style>
</resources>